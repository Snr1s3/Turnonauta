<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pantallaLogin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PantallLogin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:padding="20dp">

            <!-- Profile Image -->
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="10dp"
                android:scaleType="centerCrop"
                app:tint="@color/design_default_color_primary"
                android:src="@drawable/ic_launcher_foreground" />

            <!-- Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FCE889"
                android:gravity="center"
                android:padding="10dp"
                android:text="Inici de Sessió"
                android:textColor="#000"
                android:textSize="22sp"
                android:textStyle="bold" />

        </LinearLayout>


        <!-- Login Form -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:layout_weight="6"
            android:padding="20dp">

            <EditText
                android:layout_width="370dp"
                android:layout_height="60dp"
                android:layout_marginBottom="10dp"
                android:background="@android:color/darker_gray"
                android:hint="correu:"
                android:inputType="textWebEmailAddress"
                android:padding="10dp"
                android:textColor="#000"
                android:textColorHint="#FFFFFF" />

            <EditText
                android:layout_width="370dp"
                android:layout_height="60dp"
                android:layout_marginBottom="15dp"
                android:background="@android:color/darker_gray"
                android:hint="contrasenya:"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="#000"
                android:textColorHint="#FFFFFF" />

            <!-- Login Button -->
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#001F3F"
                android:padding="10dp"
                android:text="Iniciar Sessió"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:padding="20dp">


            <!-- Register Link -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Si no tens conta registrat aquí"
                android:textColor="#000"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>