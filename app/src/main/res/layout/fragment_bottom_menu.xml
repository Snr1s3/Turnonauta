<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.BottomMenu">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/drawable_fragment"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/iBHistorial"
                style="@style/CustomImageButton2"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:contentDescription="Hola"
                android:scaleType="fitCenter"
                android:src="@drawable/historial" />

            <ImageButton
                android:id="@+id/iBCodi"
                style="@style/CustomImageButton2"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:contentDescription="Hola"
                android:scaleType="fitCenter"
                android:src="@drawable/afegir_codi" />

            <ImageButton
                android:id="@+id/iBUsuari"
                style="@style/CustomImageButton2"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:contentDescription="Hola"
                android:scaleType="fitCenter"
                android:src="@drawable/user" />
        </LinearLayout>
</FrameLayout>