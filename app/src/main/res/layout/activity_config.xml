<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pantallaLogin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="30dp"
    android:background="@color/color_background"
    android:orientation="vertical"
    tools:context=".PantallaLogin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <!-- Profile Image -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="10dp"
            android:contentDescription="@string/logo"
            android:scaleType="centerCrop"
            android:src="@drawable/logo2" />
        <!-- Title -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_surface"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingTop="5dp"
            android:text="@string/configuracio"
            android:textColor="#000"
            android:textSize="32sp"
            android:fontFamily="@font/poppins_regular" />


        <Button
            android:id="@+id/btnPerfil"
            style="@style/WhiteButton"
            android:layout_width="350dp"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:contentDescription="@string/app_name"
            android:text="@string/editarPerfil"
            android:textSize="20sp"
            tools:ignore="TextSizeCheck,DuplicateSpeakableTextCheck" />

        <Button
            android:id="@+id/btnIdioma"
            style="@style/WhiteButton"
            android:layout_width="350dp"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:text="@string/idioma"
            android:textSize="20sp"
            tools:ignore="TextSizeCheck" />

        <Button
            android:id="@+id/btnTerms"
            style="@style/WhiteButton"
            android:layout_width="350dp"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:text="@string/termesDus"
            android:textSize="20sp"
            tools:ignore="TextSizeCheck" />

        <Button
            android:id="@+id/btnPoliticas"
            style="@style/WhiteButton"
            android:layout_width="350dp"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:text="@string/politicaPrivacitat"
            android:textSize="20sp"
            tools:ignore="TextSizeCheck" />

        <Button
            android:id="@+id/btnAbout"
            style="@style/WhiteButton"
            android:layout_width="350dp"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:text="@string/aboutUs"
            android:textSize="20sp"
            tools:ignore="TextSizeCheck" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageButton
                android:id="@+id/btn_ubi"
                style="@style/WhiteButton"
                android:scaleType="fitCenter"
                android:layout_width="80dp"
                android:contentDescription="@string/app_name"
                android:layout_height="80dp"
                android:layout_marginEnd="20dp" />

            <ImageButton
                android:id="@+id/btnNoti"
                style="@style/WhiteButton"
                android:layout_width="80dp"
                android:contentDescription="@string/app_name"
                android:layout_height="80dp"
                android:layout_marginEnd="20dp" />

            <ImageButton
                android:id="@+id/btnModo"
                style="@style/WhiteButton"
                android:contentDescription="@string/app_name"
                android:scaleType="fitCenter"
                android:layout_width="80dp"
                android:layout_height="80dp" />

        </LinearLayout>

        <Button
            android:id="@+id/btnLogOut"
            style="@style/RedBorderButton"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:text="@string/tancarSessio" />



    </LinearLayout>

</LinearLayout>