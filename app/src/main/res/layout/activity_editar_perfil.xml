<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pantallaLogin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="30dp"
    android:background="@color/color_background"
    android:orientation="vertical"
    tools:context=".PantallaLogin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <!-- Profile Image -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="10dp"
            android:contentDescription="@string/logo"
            android:scaleType="centerCrop"
            android:src="@drawable/logo2" />
        <!-- Title -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_surface"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingTop="5dp"
            android:text="EDITAR PERFIL"
            android:textColor="#000"
            android:textSize="32sp"
            android:fontFamily="@font/poppins_regular" />

        <ImageButton
            android:id="@+id/BtnFotoPerfil"
            android:src="@drawable/perfil_photo"
            android:layout_marginTop="20dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/color_background"
             />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnChangeName"
            style="@style/WhiteButton"
            android:layout_width="300dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="150dp"
            android:layout_height="45dp"
            android:textSize="20sp"
            android:drawableEnd="@drawable/editusername"
            android:text="Nom Usuari" />
        <Button
            android:id="@+id/btnLogOut"
            style="@style/RedBorderButton"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:textSize="20sp"
            android:elevation="8dp"
            android:text="Borrar perfil" />



    </LinearLayout>

</LinearLayout>